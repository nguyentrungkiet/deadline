<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tdmu.deadline.tienichcongnhan.TimKiemViecLam">
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButtonHomepage"
        android:src="@drawable/homepage"
        android:layout_alignBottom="@+id/imageButtonUlities"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:id="@+id/imageButtonUlities"
        android:src="@drawable/ulities"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageButtonHomepage"
        android:layout_toEndOf="@+id/imageButtonHomepage" />

    <ImageButton
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:id="@+id/imageButtonSearch"
        android:src="@drawable/search"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageButtonUlities"
        android:layout_toEndOf="@+id/imageButtonUlities" />

    <ImageButton
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:id="@+id/imageButtonInbox"
        android:src="@drawable/inbox"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageButtonSearch"
        android:layout_toEndOf="@+id/imageButtonSearch" />

    <ImageButton
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:id="@+id/imageButtonMenu"
        android:src="@drawable/menu"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageButtonInbox"
        android:layout_toEndOf="@+id/imageButtonInbox" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageButtonHomepage"
        android:id="@+id/scrollView3"></ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButtonHomepage">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÌM KIẾM VIỆC LÀM "
            android:id="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"
            android:textColor="#fd0000"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THEO YÊU CẦU"
            android:id="@+id/textView6"
            android:textColor="#fd0000"
            android:textSize="30dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="TÌM KIẾM THEO ĐỊA PHƯƠNG"
            android:id="@+id/buttonTKTDPhuong"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/buttonTKTCViec"
            android:layout_alignStart="@+id/buttonTKTCViec"
            android:layout_marginTop="47dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="TÌM KIẾM THEO CÔNG VIỆC"
            android:id="@+id/buttonTKTCViec"
            android:layout_below="@+id/buttonTKTDPhuong"
            android:layout_centerHorizontal="true"
             />

        <Button
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="TÌM KIẾM THEO MỨC LƯƠNG"
            android:id="@+id/buttonTKTMLuong"
            android:layout_below="@+id/buttonTKTCViec"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="TÌM KIẾM QUANh KHU VỰC"
            android:id="@+id/buttonTKQKVuc"
            android:layout_below="@+id/buttonTKTMLuong"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


</RelativeLayout>
